
@{
    Layout = null;
}

<form action="@Url.Action("Create")" method="post" id="appConfig_form">

    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-3" for="Name">名称</label>
            <div class="col-md-9">
                <input data-bind="value:ID" name="ID" type="text" style="display:none" />
                <input class="form-control text-box single-line" id="Name" name="Name" data-bind="value:Name" type="text" value="" placeholder="请输入APP名称" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3" for="Description">描述</label>
            <div class="col-md-9">
                <textarea class="form-control" id="Description" name="Description" data-bind="value:Description" placeholder="APP相关说明" style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 48px;"></textarea>

            </div>
        </div>

        

    </div>

</form>
